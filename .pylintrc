[MASTER]
# Configuraci√≥n de Pylint para CorAlertIntel
disable=C0114,C0116,R0903,W0613
max-line-length=100
ignore-patterns=test_.*\.py,venv.*,__pycache__.*

[MESSAGES CONTROL]
disable=missing-docstring,too-few-public-methods,too-many-arguments,too-many-locals

[FORMAT]
max-line-length=100
indent-string='    '

[DESIGN]
max-args=8
max-locals=20
max-returns=6
max-branches=15
max-statements=60

[VARIABLES]
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

[IMPORTS]
import-graph=
import-graph-format=png
import-graph-format=dot
